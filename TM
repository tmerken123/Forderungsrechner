          </div>
        </div>
      </div>
    `;
  }

  function init() {
    let betrag = 0;
    root.innerHTML = renderApp(betrag);
    document.getElementById('betragInput').addEventListener('input', (e) => {
      betrag = parseFloat(e.target.value) || 0;
      root.innerHTML = renderApp(betrag);
      init(); // Re-bind input
    });
  }

  init();
});
